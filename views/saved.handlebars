{{#each data}}
<h2>Running Activity Summary</h2>
<table>
    <tr>
        <th>Runs</th>
        <th>Distance</th>
        <th>Pace</th>
        <th>Fastest Pace</th>
        <th>Longest distance</th>
        <th>Longest Duration</th>
    </tr>
    <tr>
        <td>{{runSummary.runsPerWeek}}</td>
        <td>{{runSummary.averageDistance}}</td>
        <td>{{runSummary.averagePacePerRun}}</td>
        <td>{{runSummary.fastestAverage}}</td>
        <td>{{runSummary.longestDistance}}</td>
        <td>{{runSummary.longestDuration}}</td>
    </tr>
</table>

<h2>Cycling Activity Summary</h2>
<table>
    <tr>
        <th>Rides</th>
        <th>Distance</th>
        <th>Pace</th>
        <th>Fastest Pace</th>
        <th>Longest distance</th>
        <th>Longest Duration</th>
    </tr>
    <tr>
        <td>{{rideSummary.ridesPerWeek}}</td>
        <td>{{rideSummary.averageDistance}}</td>
        <td>{{rideSummary.averagePacePerRide}}</td>
        <td>{{rideSummary.fastestAverage}}</td>
        <td>{{rideSummary.longestDistance}}</td>
        <td>{{rideSummary.longestDuration}}</td>
    </tr>
</table>
{{/each}}